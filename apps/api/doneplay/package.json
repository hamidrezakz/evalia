{
  "name": "@doneplay/api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "// ---- Development Scripts ----": "(Do NOT use these in production)",
    "build": "pnpm prisma:generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "pnpm exec prisma generate --schema=../../../packages/database/doneplay/prisma/schema.prisma",
    "prisma:migrate": "pnpm exec prisma migrate dev --schema=../../../packages/database/doneplay/prisma/schema.prisma",
    "prisma:studio": "pnpm exec prisma studio --schema=../../../packages/database/doneplay/prisma/schema.prisma",
    "// ---- Production / Deploy Scripts ----": "(Safe for production deploy pipelines)",
    "prisma:migrate:deploy": "pnpm exec prisma migrate deploy --schema=../../../packages/database/doneplay/prisma/schema.prisma",
    "prisma:migrate:status": "pnpm exec prisma migrate status --schema=../../../packages/database/doneplay/prisma/schema.prisma",
    "prisma:db:pull": "pnpm exec prisma db pull --schema=../../../packages/database/doneplay/prisma/schema.prisma",
    "start:prod": "node dist/main",
    "start:prod:migrated": "pnpm prisma:migrate:deploy && node dist/main",
    "deploy:build-only": "pnpm build",
    "deploy:full": "pnpm prisma:migrate:deploy && pnpm build",
    "health:check": "node -e \"require('http').get(process.env.API_HEALTH_URL||'http://localhost:3000/health',r=>{console.log('HEALTH STATUS',r.statusCode);process.exit(r.statusCode===200?0:1);})\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/serve-static": "5.0.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "@prisma/client": "^6.14.0",
    "@types/passport-jwt": "^4.0.1",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "optionalDependencies": {
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/compression": "^1.7.5",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
